<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <item name="android:actionBarStyle">@style/AppActionBarTheme</item>
        <item name="actionBarStyle">@style/AppActionBarTheme</item>

    </style>

    <!--ActionBarTheme-->
    <style name="AppActionBarTheme" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/dark_dark_grey</item>
        <item name="android:actionOverflowButtonStyle">@color/dark_dark_grey</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/the_darkest_grey</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

</resources>
